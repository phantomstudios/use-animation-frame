    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
